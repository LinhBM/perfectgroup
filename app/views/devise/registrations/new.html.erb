<div class="row">
  <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="card padding-md margin-top-md">
        <h2 class="text-center"><%= t ".new" %></h2>
        <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.text_field :username, class: "form-control",
              placeholder: t("fuser") %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, class: "form-control",
              placeholder: t("femail"), autofocus:true %>
          </div>

          <div class="form-group">
            <%= f.telephone_field :phone_number, class: "form-control",
              placeholder: t("fphone")%>
          </div>

          <div class="form-group">
            <%= f.password_field :password, class: "form-control",
              placeholder: t("fpass"), autocomplete: "off" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, class: "form-control",
              placeholder: t("fnpass"), autocomplete: "off" %>
          </div>

          <div class="form-group">
            <%= f.file_field :image %>
          </div>

          <div class="form-group">
            <%= f.submit t(".new"), class: "btn btn-success btn-block" %>
          </div>

          <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
  <div class="col-md-3"></div>
</div>
